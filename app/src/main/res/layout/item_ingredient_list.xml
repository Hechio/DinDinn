<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/small"
    app:cardBackgroundColor="@color/white"
    android:layout_marginStart="@dimen/padding_small"
    android:layout_marginVertical="@dimen/padding_smaller"
    app:cardCornerRadius="@dimen/small">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_fastfood_24"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meal_holder"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/text_fourteen"
            android:layout_margin="@dimen/small"/>

        <LinearLayout
            android:id="@+id/ll_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|bottom"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/medium"
            android:background="@drawable/border_grey_background">
            <TextView
                android:id="@+id/tv_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/available_grey"
                android:textColor="@color/white"
                android:fontFamily="@font/sofia_pro"
                android:textSize="@dimen/text_fourteen"
                android:paddingHorizontal="@dimen/padding_small"
                android:text="@string/available"/>

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:layout_marginBottom="@dimen/small"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/holder_num"
                />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>