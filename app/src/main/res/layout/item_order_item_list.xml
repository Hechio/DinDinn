<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_back"
        android:layout_marginVertical="@dimen/small"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Nasi Lemak"
        android:layout_marginStart="@dimen/small"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/text_fourteen"
        android:gravity="bottom"
        android:textAlignment="gravity"
        app:drawableStartCompat="@drawable/ic_baseline_clear_24" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginStart="20dp"
        android:text="# Protein (7)"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="1 Almond"
        android:textColor="@color/textBlack"
        android:fontFamily="@font/montserrat_medium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="More egg"
        android:textColor="@color/blue"
        android:fontFamily="@font/montserrat_medium"/>

</androidx.appcompat.widget.LinearLayoutCompat>